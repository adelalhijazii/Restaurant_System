@model Restaurant.Areas.Admin.ViewModels.MasterServiceViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2>MasterService</h2>
    <br />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterService">MasterService</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterServiceId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterServiceTitle" class="control-label"></label>
                <input asp-for="MasterServiceTitle" class="form-control" />
                <span asp-validation-for="MasterServiceTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterServiceDesc" class="control-label"></label>
                @* <input asp-for="MasterServiceDesc" class="form-control" /> *@
                <textarea asp-for="MasterServiceDesc" class="form-control" rows="4" placeholder="Enter Description"></textarea>
                <span asp-validation-for="MasterServiceDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterServiceImage" class="control-label"></label>
                <input asp-for="MasterServiceImage" class="form-control" />
                <span asp-validation-for="MasterServiceImage" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
