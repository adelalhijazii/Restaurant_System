@model Restaurant.Areas.Admin.ViewModels.WhatPeopleSayViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h2>WhatPeopleSay</h2>
    <br />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="WhatPeopleSay">WhatPeopleSay</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="WhatPeopleSayId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="WhatPeopleSayTitle" class="form-label"></label>
                <input asp-for="WhatPeopleSayTitle" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="WhatPeopleSayTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="WhatPeopleSayDesc" class="form-label"></label>
                <input asp-for="WhatPeopleSayDesc" class="form-control" placeholder="Enter Description" />
                <span asp-validation-for="WhatPeopleSayDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="WhatPeopleSayFile" class="form-label"></label>
                <input asp-for="WhatPeopleSayFile" type="file" class="form-control" />
                <span asp-validation-for="WhatPeopleSayFile" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
